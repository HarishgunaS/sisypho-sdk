{
  "name": "Sisypho Chrome Ext.",
  "description": "Connect your browser to Sisypho's automation platform.",
  "version": "1.0",
  "manifest_version": 3,
  "minimum_chrome_version": "116",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:54319/*",
    "ws://localhost:54319/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "sisypho_logo_16.png",
      "48": "sisypho_logo_48.png",
      "128": "sisypho_logo_128.png"
    }
  },
  "icons": {
    "16": "sisypho_logo_16.png",
    "48": "sisypho_logo_48.png",
    "128": "sisypho_logo_128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
